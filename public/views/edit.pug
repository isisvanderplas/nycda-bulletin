extends application.pug

block content
  .container
    .row
      .col-xs-8.offset-xs-2
        h1 what's on your mind?
        hr
        form(action="/messages" method="POST")
          div(class="form-group")
            label tell me!
            input(name="title" type="text" class="form-control" id="message-title")
            textarea(class="form-control" rows=5)
          div(class="form-group text-xs-right")
            button(type="submit" class="btn btn-success") have a go at it!
